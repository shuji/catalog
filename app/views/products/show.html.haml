%p#notice= notice

%p.name
  %b Name:
  = @product.name
%p.image
  = image_tag(@product.image_url) if @product.image?
%p.price
  %b Price:
  = @product.price
.description
  %p
    %b Description:
    = simple_format @product.description

= link_to 'Edit', edit_product_path(@product)
\|
= link_to 'Back', products_path
